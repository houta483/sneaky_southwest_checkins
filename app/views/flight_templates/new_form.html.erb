<h1>
  Add a new flight
</h1>


<hr>

<!-- Form flight start -->
<form action="/create_flight" method="post">
<!-- Form flight end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for departs_at start -->
  <div class="form-group">
    <label for="departs_at">
      Departs at
    </label>

    <!-- Input for departs_at start -->
    <input type="text" id="departs_at" name="departs_at" class="form-control">
    <!-- Input for departs_at end -->
  </div>
  <!-- Label and input for departs_at end -->

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
